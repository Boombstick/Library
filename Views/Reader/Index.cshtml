@model IEnumerable<Reader>
<table>
    
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Number of books</th>

    </tr>


    @foreach (Reader reader in Model)
    {
        <tr>
            <td><a asp-controller="Reader" asp-action="ShowReader" asp-route-readerId="@reader.Id">@reader.FullName</a></td>

            <td>@reader.Books.Count()</td>
            <td></td>
            <td><a asp-action="DeleteReader" asp-route-id="@reader.Id">Delete Reader</a></td>
        </tr>
    }
</table>


