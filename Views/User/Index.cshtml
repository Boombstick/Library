@model IEnumerable<Library.Models.Account.LibraryUser>
@{
    ViewBag.Title = "Список пользователей";
}
<a asp-action="Create">Добавить пользователя</a>
<table class="table">
    <tr><th>Имя</th><th>Email</th><th></th></tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>

                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                    <a asp-action="ChangePassword" asp-route-id="@user.Id">Изменить парoль</a>
                    <button type="submit">Удалить</button>
                </form>
            </td>

        </tr>
    } 
</table>
