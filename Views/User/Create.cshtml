@model Library.Models.User.CreateUserViewModel
@{
    ViewBag.Title = "Добавление пользователя";
}
<form asp-action="Create" asp-controller="User">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="UserName" class="control-label">Имя пользователя</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outloine-secondary" />
    </div>

</form>