@model Library.Models.User.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}
<form asp-action="ChangePassword" asp-controller="User">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>

    <div class="form-control">
        <label asp-for="UserName" class="control-label">Имя пользователя</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-control">
        <label asp-for="OldPassword" class="control-label">Старый пароль</label>
        <input asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-control">
        <label asp-for="NewPassword" class="control-label">Новый пароль</label>
        <input asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-outloine-secondary" />
    </div>

</form>