@using Library.Models.Account
@model RegisterViewModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Регистрация</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="/images/favicon.ico">

    <!-- App css -->
    <link href="/html/saas/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="/html/saas/assets/css/app.min.css" rel="stylesheet" type="text/css" id="light-style" />
    <link href="/html/saas/assets/css/app-dark.min.css" rel="stylesheet" type="text/css" id="dark-style" />

</head>

<body>
    <div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-4 col-lg-5">
                    <!-- Register form start -->
                    <div class="card">
                        <!-- Logo-->
                        <div class="card-header pt-4 pb-4 text-center bg-primary">
                            <a asp-controller="Home" asp-action="Index">
                                <span><img src="/images/logo.png" alt="" height="50"></span>
                            </a>
                        </div>
                        <!-- Register form start -->
                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <h4 class="text-dark-50 text-center mt-0 fw-bold">Регистрация</h4>

                            </div>

                            <form method="post" asp-controller="Account" asp-action="Register">
                                <div asp-validation-summary="ModelOnly"></div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control" placeholder="Email" />
                                    <span asp-validation-for="Email"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Имя пользователя(будет использоваться как логин)</label>
                                    <input asp-for="Name" class="form-control" placeholder="Введите login" />
                                    <span asp-validation-for="Name"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label">Имя читателя</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Введите Имя" />
                                    <span asp-validation-for="FirstName"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label">Фамилия читателя</label>
                                    <input asp-for="LastName" class="form-control" placeholder="Введите Фамилию" />
                                    <span asp-validation-for="LastName"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label">Пароль</label>
                                    <div class="input-group input-group-merge">
                                        <input asp-for="Password" class="form-control" />
                                        <div class="input-group-text" data-password="false">
                                            <span class="password-eye"></span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="PasswordConfirm" class="form-label">Подтвердите пароль</label>
                                    <div class="input-group input-group-merge">
                                        <input asp-for="PasswordConfirm" class="form-control" />
                                        <div class="input-group-text" data-password="false">
                                            <span class="password-eye"></span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="PasswordConfirm"></span>
                                </div>
                                @* <div class="mb-3">
                                <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="checkbox-signup">
                                <label class="form-check-label" for="checkbox-signup">I accept <a href="#" class="text-muted">Terms and Conditions</a></label>
                                </div>
                                </div> *@

                                <div class="mb-3 text-center">
                                    <button class="btn btn-primary" type="submit"> Зарегистрироваться </button>
                                </div>
                            </form>
                        </div>

                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p class="text-muted">Уже есть аккаунт? <a asp-controller="Account" asp-action="Login" class="text-muted ms-1"><b>Войти</b></a></p>
                        </div> <!-- end col-->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

    <footer class="footer footer-alt">

    </footer>

    <!-- bundle -->
    <script src="/html/saas/assets/js/vendor.min.js"></script>
    <script src="/html/saas/assets/js/app.min.js"></script>

</body>
</html>

